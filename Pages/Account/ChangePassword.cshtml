@page
@model Assignment2.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
}

<form method="post">
    @if (!string.IsNullOrEmpty(Model.Required))
    {
        <div class="alert alert-warning">You are required to change your password before continuing.</div>
    }
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label>Old password</label>
        <input asp-for="OldPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label>New password</label>
        <input asp-for="NewPassword" class="form-control" />
    </div>
    <h2>Change Two-Factor Authentication</h2>
    <p>Scan or copy this secret into your authenticator app and enter the code to verify.</p>
    <button class="btn btn-primary">Change password</button>
</form>
