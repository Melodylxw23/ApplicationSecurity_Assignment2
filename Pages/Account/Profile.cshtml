@page
@model Assignment2.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

@* Anti-forgery token for AJAX POSTs (NRIC reveal) *@
@Html.AntiForgeryToken()

<h2 class="mb-3 text-center">Profile</h2>

<div class="mb-3 text-end">
    <a asp-page="/Account/ChangePassword" class="btn btn-sm btn-outline-primary me-2">Change password</a>
    @if (Model.TwoFactorEnabled)
    {
        <form method="post" asp-page-handler="Disable2fa" class="d-inline">
            <button type="submit" class="btn btn-sm btn-outline-danger me-2">Disable 2FA</button>
            @Html.AntiForgeryToken()
        </form>
    }
    else
    {
        <a asp-page="/Account/Enable2fa" class="btn btn-sm btn-outline-secondary me-2">Enable 2FA</a>
    }
    <a asp-page="/Account/ForgotPassword" class="btn btn-sm btn-outline-secondary">Reset password (email)</a>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">First name</dt>
            <dd class="col-sm-9">@Model.FirstName</dd>

            <dt class="col-sm-3">Last name</dt>
            <dd class="col-sm-9">@Model.LastName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Gender</dt>
            <dd class="col-sm-9">@Model.Gender</dd>

            <dt class="col-sm-3">NRIC</dt>
            <dd class="col-sm-9">
                <span id="nricMasked">************</span>
                <span id="nricValue" style="display:none">@Model.NRIC</span>
                <button id="revealNric" class="btn btn-link btn-sm">Show</button>
            </dd>

            <dt class="col-sm-3">Date of birth</dt>
            <dd class="col-sm-9">@Model.DateOfBirth?.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">About me</dt>
            <dd class="col-sm-9">@Html.Raw(Model.WhoAmI)</dd>

            <dt class="col-sm-3">Resume</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.ResumePath))
                {
                    <a asp-page-handler="Download" class="btn btn-link">View resume</a>
                }
                else
                {
                    <span class="text-muted">No resume uploaded</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="card mt-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Recent activity</h5>
            <div>
                <form method="get" class="d-inline">
                    <label class="me-2">Filter:</label>
                    <select name="Filter" class="form-select d-inline-block w-auto me-2">
                        <option value="All" selected>All</option>
                        <option value="Security">Security (Login/Logout/PasswordChange)</option>
                        <option value="Login">Login</option>
                        <option value="Logout">Logout</option>
                        <option value="PasswordChange">PasswordChange</option>
                    </select>
                    <button class="btn btn-sm btn-outline-primary">Apply</button>
                </form>
                <span class="ms-3 text-muted">Total: @Model.ActivityCount</span>
                <span class="ms-2 text-muted">Showing: @Model.FilteredCount</span>
            </div>
        </div>
        @if (Model.AuditLogs == null || !Model.AuditLogs.Any())
        {
            <p class="text-muted">No recent activity.</p>
        }
        else
        {
            <ul class="list-group">
                @foreach (var a in Model.AuditLogs)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div>
                            <div><strong>@a.Action</strong></div>
                            <div class="small text-muted">@a.Details</div>
                        </div>
                        <div class="small text-muted">@a.Timestamp.ToString("yyyy-MM-dd HH:mm")</div>
                    </li>
                }
            </ul>
        }
    </div>
</div>

@section Scripts {
    <script>
        (function(){
            var btn = document.getElementById('revealNric');
            var masked = document.getElementById('nricMasked');
            var val = document.getElementById('nricValue');
            btn.addEventListener('click', function (e) {
                e.preventDefault();
                if (val.style.display === 'none' || val.innerText.trim() === '') {
                    // fetch
                    fetch('?handler=RevealNric', { method: 'POST', headers: { 'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value } })
                        .then(r => r.json())
                        .then(j => {
                            if (j.success) {
                                val.innerText = j.nric;
                                val.style.display = '';
                                masked.style.display = 'none';
                                btn.innerText = 'Hide';
                            } else {
                                alert('Unable to reveal NRIC');
                            }
                        });
                } else {
                    // hide
                    val.style.display = 'none';
                    masked.style.display = '';
                    btn.innerText = 'Show';
                }
            });
        })();
    </script>
}

